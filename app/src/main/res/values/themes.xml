<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="ThemeMyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/rally_yellow</item>
        <item name="colorOnPrimary">@color/rally_background</item>
        <item name="android:textColor">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="itemBackground">@color/rally_background</item>
        <item name="actionMenuTextColor">@color/rally_surface</item>
        <item name="colorSecondary">@color/rally_blue</item>
        <item name="colorSecondaryVariant">@color/rally_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="backgroundColor">@color/background</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="android:windowNoTitle">true</item>
        <item name="titleTextColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowAnimationStyle">@style/Alpha</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/red</item>
        <!-- Customize your theme here. -->

        <item name="android:windowBackground">@null</item>

    </style>
    <style name="ThemeMyApplicationDark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/rally_yellow</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/rally_surface</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="backgroundColor">@color/rally_background</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSurface">@color/rally_surface</item>
        <item name="colorBackgroundFloating">@color/rally_surface</item>
        <item name="colorAccent">@color/rally_surface</item>
        <item name="android:windowNoTitle">true</item>
        <!-- Status bar color. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowAnimationStyle">@style/Alpha</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/red</item>
        <!-- Customize your theme here. -->

        <item name="android:windowBackground">@null</item>

    </style>
    <style
        name="AnimationActivity"
        parent="@android:style/Theme.Light">
        <item name="android:windowAnimationStyle">@style/DownUpActivity</item>
    </style>
</resources>



