<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="horizontal"
    android:outlineProvider="background">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"

        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:background="#ffeb3b"
        android:visibility="gone"
        app:expanded="false">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:fadingEdge="vertical"
            android:foreground="@color/Blue_800"
            android:foregroundGravity="fill_horizontal"
            android:foregroundTint="#DFFF0000"
            app:contentScrim="#ffeb3b"
            app:expandedTitleMarginBottom="0dp"
            app:expandedTitleMarginStart="0dp"
            app:expandedTitleTextAppearance="@style/text"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:title="@string/title_contract"
            app:toolbarId="@+id/toolbarfrag"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:layout_marginTop="56dp"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.care.CareFragment">

            <Button
                android:id="@+id/contract_shopcenter"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:alpha="1"
                android:backgroundTint="@color/white"
                android:elevation="20dp"

                android:gravity="clip_horizontal|clip_vertical|start|fill"
                android:onClick="Click"
                android:scaleX="1"
                android:text="@string/contract_shopcenter"
                android:textSize="14sp"
                app:cornerRadius="0dp"
                app:icon="@drawable/twotone_store_24"
                app:iconTint="@color/rally_orange"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:rippleColor="@color/rally_orange" />

            <Button
                android:id="@+id/contract_zk"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:alpha="1"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/raleway_semibold"
                android:gravity="clip_horizontal|clip_vertical|fill"
                android:onClick="Click"
                android:scaleX="1"
                android:text="@string/contract_zk"
                android:textSize="14sp"
                app:cornerRadius="0dp"
                app:icon="@drawable/twotone_domain_24"
                app:iconTint="@color/rally_darkgreen"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/contract_shopcenter"
                app:rippleColor="@color/rally_darkgreen" />

            <Button
                android:id="@+id/contract_lunapark"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:alpha="1"
                android:backgroundTint="@color/white"
                android:gravity="clip_horizontal|clip_vertical|fill"
                android:onClick="Click"
                android:scaleX="1"
                android:text="@string/contract_lunapark"
                android:textSize="14sp"
                app:cornerRadius="0dp"
                app:icon="@drawable/twotone_attractions_24"
                app:iconTint="@color/rally_yellow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/contract_zk"
                app:rippleColor="@color/rally_yellow" />

            <Button
                android:id="@+id/contract_houses"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:alpha="1"
                android:backgroundTint="@color/white"
                android:gravity="clip_horizontal|clip_vertical|fill"
                android:onClick="Click"
                android:scaleX="1"
                android:text="@string/contract_houses"
                android:textSize="14sp"
                app:cornerRadius="0dp"
                app:icon="@drawable/twotone_real_estate_agent_24"
                app:iconTint="@color/rally_green_primary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/contract_lunapark"
                app:rippleColor="@color/rally_green_primary" />

            <TextView
                android:id="@+id/text_notifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_input_add"
        android:visibility="gone" />

    <Button
        android:id="@+id/back_button_to_gov"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="top|left"
        android:background="#00FFFFFF"
        android:foreground="@drawable/baseline_arrow_back_36"
        android:foregroundTintMode="src_in"
        android:onClick="Click"
        android:scaleX="0.5"
        android:scaleY="0.5" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarfrag"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/yellow"
        app:menu="@menu/toolbar_menu"
        app:title="@string/title_contract"
        app:titleMarginStart="56dp"></androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/linearLayoutProgress"
        android:layout_width="168dp"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="right|top|end"
        android:layout_marginRight="40dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cityprgs">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/citycond_tool"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ProgressBar
                android:id="@+id/citycond_prgsbar_tool"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/progressbar"
                android:progressTint="@color/dark_blue"
                android:secondaryProgress="100"
                android:secondaryProgressTint="@color/blue"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/susp_tool"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ProgressBar
                android:id="@+id/susp_prgsbar_tool"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/progressbar"
                android:progressTint="@color/dark_blue"
                android:secondaryProgress="100"
                android:secondaryProgressTint="@color/blue"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/happy_tool"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ProgressBar
                android:id="@+id/hppy_prgsbar_tool"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/progressbar"
                android:progressTint="@color/dark_blue"
                android:secondaryProgress="100"
                android:secondaryProgressTint="@color/blue"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    "

</androidx.coordinatorlayout.widget.CoordinatorLayout>