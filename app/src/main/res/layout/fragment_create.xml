<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rally_background"
    android:forceDarkAllowed="true"
    android:layerType="hardware"
    app:statusBarBackground="#FFB300">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"

        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:background="@color/rally_surface">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            style="@style/Theme.MyApplication"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTintMode="src_in"
            android:forceDarkAllowed="true"
            android:scrollbarTrackHorizontal="?android:attr/fastScrollTrackDrawable"
            app:contentScrim="@color/rally_surface"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:title="@string/title_create"
            app:titleEnabled="true"
            app:toolbarId="@+id/toolbarfrag">


            <Button
                android:id="@+id/back_button"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="top|left"
                android:background="?attr/homeAsUpIndicator"
                android:backgroundTint="#000000"
                android:backgroundTintMode="multiply"
                android:foreground="@drawable/abc_vector_test"
                android:foregroundTint="@color/gray"
                android:foregroundTintMode="src_in"
                android:onClick="Click"
                android:scaleX="0.5"
                android:scaleY="0.5" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/care_back"
                android:foreground="@drawable/care_back"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/create" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarfrag"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:clickable="true"
                app:menu="@menu/toolbar_menu"
                app:title="@string/title_create"></androidx.appcompat.widget.Toolbar>

            <LinearLayout
                android:id="@+id/linearLayoutProgress"
                android:layout_width="168dp"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="bottom|right|center_vertical|end"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cityprgs">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/citycond_tool"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ProgressBar
                        android:id="@+id/citycond_prgsbar_tool"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="0"
                        android:progressBackgroundTintMode="add"
                        android:progressDrawable="@drawable/progressbar"
                        android:progressTint="@color/rally_green_primary"
                        android:secondaryProgress="100"
                        android:secondaryProgressTint="@color/rally_background"
                        android:secondaryProgressTintMode="add"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/susp_tool"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ProgressBar
                        android:id="@+id/susp_prgsbar_tool"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="0"
                        android:progressBackgroundTintMode="add"
                        android:progressDrawable="@drawable/progressbar"
                        android:progressTint="@color/rally_orange"
                        android:secondaryProgress="100"
                        android:secondaryProgressTint="@color/rally_background"
                        android:secondaryProgressTintMode="add"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/happy_tool"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ProgressBar
                        android:id="@+id/hppy_prgsbar_tool"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="0"
                        android:progressBackgroundTintMode="add"
                        android:progressDrawable="@drawable/progressbar"
                        android:progressTint="@color/rally_yellow"
                        android:secondaryProgress="100"
                        android:secondaryProgressTint="@color/rally_background"
                        android:secondaryProgressTintMode="add"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:visibility="visible"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.care.CareFragment">

            <Button
                android:id="@+id/create_park"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="8dp"
                android:alpha="1"
                android:backgroundTint="@color/rally_surface"
                android:elevation="20dp"
                android:fontFamily="@font/roboto_mono_medium"
                android:fontFeatureSettings="@string/app_name"
                android:gravity="clip_horizontal|clip_vertical|start|fill"
                android:onClick="Click"
                android:scaleX="0.975"
                android:text="@string/create_park"
                android:textSize="14sp"
                android:translationZ="10dp"
                android:typeface="sans"
                app:cornerRadius="10dp"
                app:icon="@drawable/outline_nature_people_white_36dp"
                app:iconTint="@color/rally_blue"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp" />

            <Button
                android:id="@+id/create_roads"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:alpha="1"
                android:backgroundTint="@color/rally_surface"
                android:fontFamily="@font/roboto_mono_medium"
                android:gravity="clip_horizontal|clip_vertical|fill"
                android:onClick="Click"
                android:scaleX="0.975"
                android:text="@string/create_roads"
                android:textSize="14sp"
                android:typeface="sans"
                app:cornerRadius="10dp"
                app:icon="@drawable/outline_add_road_white_36dp"
                app:iconTint="@color/rally_purple"
                app:layout_constraintTop_toBottomOf="@+id/create_park"
                tools:layout_editor_absoluteX="0dp" />

            <Button
                android:id="@+id/create_zdroads"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:alpha="1"
                android:backgroundTint="@color/rally_surface"
                android:fontFamily="@font/roboto_mono_medium"
                android:gravity="clip_horizontal|clip_vertical|fill"
                android:onClick="Click"
                android:scaleX="0.975"
                android:text="@string/create_zdroads"
                android:textSize="14sp"
                android:typeface="sans"
                app:cornerRadius="10dp"
                app:icon="@drawable/outline_train_white_36dp"
                app:iconTint="@color/rally_orange"
                app:layout_constraintTop_toBottomOf="@+id/create_roads"
                tools:layout_editor_absoluteX="8dp" />

            <Button
                android:id="@+id/create_vokzal"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:alpha="1"
                android:backgroundTint="@color/rally_surface"
                android:fontFamily="@font/roboto_mono_medium"
                android:gravity="clip_horizontal|clip_vertical|fill"
                android:onClick="Click"
                android:scaleX="0.975"
                android:text="@string/create_vokzal"
                android:textSize="14sp"
                android:typeface="sans"
                app:cornerRadius="10dp"
                app:icon="@drawable/outline_hail_white_36dp"
                app:iconTint="@color/rally_yellow"
                app:layout_constraintTop_toBottomOf="@+id/create_zdroads"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/text_notifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_input_add"
        android:visibility="invisible" />"

</androidx.coordinatorlayout.widget.CoordinatorLayout>